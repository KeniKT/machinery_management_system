<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Login | Machinery Management</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
 <style>
  :root {
    --primary: #1b3c6b;
    --primary-dark: #0f2847;
    --primary-light: #2d4d84;
    --accent: #5c7cfa;
    --accent-dark: #445ee2;
    --accent-light: #7d95ff;
    --accent-transparent: rgba(92, 124, 250, 0.2);
    --light: #f8f9fa;
    --dark: #2d3e50;
    --gray: #cfd8e3;
    --gray-light: #e9ecef;
    --text-dark: #1e2a38;
    --text-muted: #6c757d;
    --white: #ffffff;
    --success: #28a745;
    --warning: #ffc107;
    --danger: #dc3545;
  }

  html, body {
    height: 100%;
    margin: 0;
    padding: 0;
    font-family: 'Segoe UI', Roboto, 'Helvetica Neue', Arial, sans-serif;
    background: linear-gradient(135deg, var(--primary) 0%, var(--primary-dark) 100%);
    color: var(--white);
    overflow-x: hidden;
  }

  body {
    display: flex;
    justify-content: center;
    align-items: center;
    position: relative;
  }

  body::before {
    content: '';
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 20% 30%, var(--accent-transparent) 0%, transparent 40%),
      radial-gradient(circle at 80% 70%, var(--accent-transparent) 0%, transparent 40%);
    z-index: -1;
    pointer-events: none;
    animation: gradientPulse 15s infinite alternate;
  }

  .login-container {
    background: linear-gradient(145deg, rgba(27, 60, 107, 0.95) 0%, rgba(15, 40, 71, 0.98) 100%);
    color: var(--white);
    border-radius: 16px;
    box-shadow: 
      0 20px 40px rgba(0, 0, 0, 0.3),
      inset 0 0 0 1px rgba(92, 124, 250, 0.3);
    padding: 2.5rem;
    width: 100%;
    max-width: 420px;
    transform: translateY(20px);
    opacity: 0;
    animation: fadeInUp 0.8s cubic-bezier(0.22, 0.61, 0.36, 1) 0.2s forwards;
    position: relative;
    overflow: hidden;
    border: 1px solid rgba(92, 124, 250, 0.5);
  }

  .login-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 5px;
    background: linear-gradient(90deg, var(--accent), var(--accent-light));
  }

  .login-container::after {
    content: '';
    position: absolute;
    bottom: -50%;
    right: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, var(--accent-transparent) 0%, transparent 60%);
    z-index: -1;
    transition: all 0.6s ease;
  }

  .login-container:hover::after {
    transform: translate(25%, 25%);
  }

  h1 {
    text-align: center;
    font-size: 2.2rem;
    margin-bottom: 2rem;
    color: var(--white);
    font-weight: 600;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.8rem;
    text-shadow: 0 2px 4px rgba(0, 0, 0, 0.2);
  }

  h1 i {
    font-size: 1.8rem;
    color: var(--accent-light);
    filter: drop-shadow(0 2px 4px rgba(0, 0, 0, 0.3));
    transition: all 0.4s cubic-bezier(0.25, 0.8, 0.25, 1);
  }

  .login-container:hover h1 i {
    transform: rotate(15deg) scale(1.1);
    color: var(--white);
    filter: drop-shadow(0 0 12px rgba(92, 124, 250, 0.7));
  }

  .form-group {
    margin-bottom: 1.5rem;
    position: relative;
  }

  .form-group label {
    display: block;
    margin-bottom: 0.5rem;
    font-weight: 500;
    color: var(--gray-light);
    transition: all 0.3s ease;
  }

  .form-control {
    width: 100%;
    padding: 0.9rem 1.2rem;
    border: 2px solid rgba(92, 124, 250, 0.3);
    border-radius: 10px;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    background-color: rgba(13, 36, 71, 0.7);
    color: var(--white);
  }

  .form-control::placeholder {
    color: var(--gray);
  }

  .form-control:focus {
    border-color: var(--accent);
    box-shadow: 0 0 0 4px rgba(92, 124, 250, 0.3);
    outline: none;
    background-color: rgba(13, 36, 71, 0.9);
    transform: translateY(-2px);
  }

  .btn-login {
    width: 100%;
    background: linear-gradient(135deg, var(--accent) 0%, var(--accent-dark) 100%);
    color: var(--white);
    font-weight: 600;
    padding: 1rem;
    border: none;
    border-radius: 10px;
    cursor: pointer;
    font-size: 1rem;
    transition: all 0.3s cubic-bezier(0.25, 0.8, 0.25, 1);
    box-shadow: 0 6px 20px rgba(92, 124, 250, 0.3);
    position: relative;
    overflow: hidden;
    margin-top: 1rem;
    letter-spacing: 0.5px;
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  .btn-login:hover {
    transform: translateY(-3px);
    box-shadow: 0 10px 30px rgba(92, 124, 250, 0.5);
    background: linear-gradient(135deg, var(--accent-light) 0%, var(--accent) 100%);
  }

  .btn-login:active {
    transform: translateY(0);
  }

  .btn-login::after {
    content: '';
    position: absolute;
    top: -50%;
    left: -50%;
    width: 200%;
    height: 200%;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
    transform: scale(0);
    transition: transform 0.6s ease;
  }

  .btn-login:hover::after {
    transform: scale(1);
  }

  .alert-danger {
    background: linear-gradient(135deg, rgba(220, 53, 69, 0.9) 0%, rgba(185, 28, 45, 0.9) 100%);
    color: var(--white);
    border: none;
    border-radius: 10px;
    padding: 0.9rem 1.2rem;
    margin-top: 1.5rem;
    font-size: 0.9rem;
    box-shadow: 0 6px 20px rgba(220, 53, 69, 0.3);
    animation: shake 0.6s cubic-bezier(.36,.07,.19,.97) both;
    transform: translate3d(0, 0, 0);
    text-shadow: 0 1px 2px rgba(0, 0, 0, 0.2);
  }

  @keyframes fadeInUp {
    from { opacity: 0; transform: translateY(30px); }
    to { opacity: 1; transform: translateY(0); }
  }

  @keyframes gradientPulse {
    0% { opacity: 0.8; }
    50% { opacity: 1; }
    100% { opacity: 0.8; }
  }

  @keyframes shake {
    10%, 90% { transform: translate3d(-1px, 0, 0); }
    20%, 80% { transform: translate3d(2px, 0, 0); }
    30%, 50%, 70% { transform: translate3d(-4px, 0, 0); }
    40%, 60% { transform: translate3d(4px, 0, 0); }
  }

  @media (max-width: 576px) {
    .login-container {
      padding: 2rem 1.5rem;
      margin: 0 1rem;
      max-width: 90%;
    }

    h1 {
      font-size: 1.9rem;
    }

    h1 i {
      font-size: 1.5rem;
    }

    .form-control {
      padding: 0.8rem 1rem;
    }
  }
</style>
</head>
<body>
  <div class="login-container">
    <h1><i class="fas fa-lock"></i>Login</h1>
    <form action="/login" method="POST">

      <!-- Username Field -->
      <div class="form-group">
        <label>Username</label>
        <input type="text" 
               name="username" 
               class="form-control"
               required>
      </div>

      <!-- Password Field -->
      <div class="form-group">
        <label>Password</label>
        <input type="password" 
               name="password" 
               class="form-control"
               required>
      </div>

      <!-- Error Message -->
      <% if (error) { %>
        <div class="alert alert-danger"><%= error %></div>
      <% } %>

      <!-- Login Button -->
      <button type="submit" 
              class="btn btn-login mt-4">
        Login
      </button>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>