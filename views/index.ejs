<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Machinery Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
      body {
        background: linear-gradient(to bottom right, #1e2a38, #2d3e50); /* Blue-black gradient */
        color: #ffffff;
        min-height: 100vh;
      }

      .container {
        background-color: #ffffff;
        color: #000000;
        padding: 30px;
        border-radius: 12px;
        margin-top: 50px;
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      }

      .back-home-btn {
  background: linear-gradient(to right, #1b3c6b, #2d3e50);
  color: #fff;
  border: none;
  padding: 10px 18px;
  border-radius: 8px;
  font-weight: 500;
  transition: background 0.3s ease;
  text-decoration: none;
}

.back-home-btn:hover {
  background: linear-gradient(to right, #324a74, #3a506b);
  color: #ffffff;
  text-decoration: none;
}


      h1 {
        color: #1b3c6b;
        font-weight: bold;
      }

      .table thead {
        background-color: #1b3c6b;
        color: white;
      }

      .table td, .table th {
        vertical-align: middle;
      }

      .btn-primary {
        background-color: #1b3c6b;
        border: none;
      }

      .btn-primary:hover {
        background-color: #324a74;
      }

      .btn-warning {
        background-color: #ffc107;
        border: none;
        color: #000;
      }

     .add-machine-btn {
  margin-top: -80px; /* Align with Back button */
  padding-left: 24px;
  padding-right: 24px;
  /* OR use width if you prefer */
  /* width: 220px; */
}

      .btn-warning:hover {
        background-color: #e0a800;
      }

      .btn-danger {
        background-color: #dc3545;
        border: none;
      }

      .btn-danger:hover {
        background-color: #bb2d3b;
      }

      /* Footer styling */
      footer {
        background-color: #f8f9fa;
        padding: 10px;
        text-align: center;
        color: #333;
      }

      .content-wrapper {
        min-height: calc(100vh - 150px);
        padding-bottom: 60px;
      }

      .alert {
        font-weight: bold;
      }
    </style>
  </head>

  <body>
    <!-- Main Content -->
    <div class="container mt-5 content-wrapper">
      <h1 class="mb-4">Machinery List</h1>

      <!-- Banner Image -->
      <div class="mb-4">
        <!-- You can add banner image here if needed -->
      </div>

      <% if (machines.length === 0) { %>
        <div class="alert alert-warning">No machines found.</div>
      <% } else { %>
        <div class="table-responsive mb-4">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% machines.forEach(machine => { %>
                <tr>
                  <td><%= machine.name %></td>
                  <td><%= machine.type %></td>
                  <td><%= machine.status %></td>
                  <td>
                    <a class="btn btn-sm btn-warning me-2" href="/machines/<%= machine.id %>/edit">Edit</a>
                    <form action="/machines/<%= machine.id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>

      <div class="mb-3">
  <a href="/" class="back-home-btn">‚Üê Back to Home</a>
</div>


      <!-- Add New Machine button -->
      <div class="text-end mb-5">
        <a class="btn btn-primary add-machine-btn" href="/machines/new">+ Add New Machine</a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
