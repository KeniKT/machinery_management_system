<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Machinery Dashboard</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
      /* Footer styling */
      footer {
        background-color: #f8f9fa;
        padding: 10px;
        text-align: center;
      }

      /* Add space between the Add New Machine button and footer */
      .content-wrapper {
        min-height: calc(100vh - 150px);
        padding-bottom: 60px;
      }
    </style>
  </head>

  <body>
    <!-- Main Content -->
    <div class="container mt-5 content-wrapper">
      <h1 class="mb-4">Machinery List</h1>

      <!-- Banner Image -->
      <div class="mb-4">
        <!-- You can add banner image here if needed -->
      </div>

      <% if (machines.length === 0) { %>
        <div class="alert alert-warning">No machines found.</div>
      <% } else { %>
        <div class="table-responsive mb-4">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>Name</th>
                <th>Type</th>
                <th>Status</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% machines.forEach(machine => { %>
                <tr>
                  <td><%= machine.name %></td>
                  <td><%= machine.type %></td>
                  <td><%= machine.status %></td>
                  <td>
                    <a class="btn btn-sm btn-warning me-2" href="/machines/<%= machine.id %>/edit">Edit</a>
                    <form action="/machines/<%= machine.id %>?_method=DELETE" method="POST" style="display:inline;">
                      <button class="btn btn-sm btn-danger" type="submit">Delete</button>
                    </form>
                  </td>
                </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      <% } %>

      <!-- Add New Machine button -->
      <div class="text-end mb-5">
        <a class="btn btn-primary" href="/machines/new">+ Add New Machine</a>
      </div>
    </div>

    <!-- Footer -->
    <footer>
      <p>&copy; 2025 Machinery Dashboard. All rights reserved.</p>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
