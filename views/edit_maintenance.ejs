<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Edit Maintenance</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />

  <style>
    body {
      background: linear-gradient(to bottom right, #1e2a38, #2d3e50);
      color: #ffffff;
      min-height: 100vh;
    }

    .container {
      background-color: #ffffff;
      color: #000000;
      padding: 40px;
      border-radius: 12px;
      margin-top: 50px;
      margin-bottom: 50px;
      box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
      max-width: 700px;
    }

    h1 {
      color: #1b3c6b;
      font-weight: bold;
      margin-bottom: 30px;
    }

    label {
      font-weight: 500;
      color: #1b3c6b;
    }

    .btn-success {
      background-color: #1b3c6b;
      border: none;
    }

    .btn-success:hover {
      background-color: #324a74;
    }

    .btn-secondary {
      background-color: #6c757d;
      border: none;
    }

    .btn-secondary:hover {
      background-color: #5a6268;
    }
  </style>
</head>
<body>
  <div class="container">
    <h1>✏️ Edit Maintenance Record</h1>
    <form action="/maintenance/edit/<%= maintenance.id %>" method="POST">
      <div class="mb-3">
        <label class="form-label">Machine:</label>
        <select name="machine_id" class="form-select" required>
          <% machines.forEach(machine => { %>
            <option value="<%= machine.id %>" <%= machine.id === maintenance.machine_id ? 'selected' : '' %>><%= machine.name %></option>
          <% }) %>
        </select>
      </div>
      <div class="mb-3">
        <label class="form-label">Due Date:</label>
        <input type="date" name="due_date" class="form-control" value="<%= maintenance.due_date %>" required>
      </div>
      <div class="mb-3">
        <label class="form-label">Description:</label>
        <textarea name="description" class="form-control" rows="3" required><%= maintenance.description %></textarea>
      </div>
      <div class="mb-3">
        <label class="form-label">Assigned To:</label>
        <select name="user_id" class="form-select" required>
          <% users.forEach(user => { %>
            <option value="<%= user.id %>" <%= user.id === maintenance.user_id ? 'selected' : '' %>>
              <%= user.first_name + ' ' + user.last_name %>
            </option>
          <% }) %>
        </select>
      </div>

      <div class="d-flex justify-content-start mt-4">
        <button type="submit" class="btn btn-success me-3">
          <i class="fas fa-save"></i> Update
        </button>
        <a href="/maintenance" class="btn btn-secondary">
          <i class="fas fa-times"></i> Cancel
        </a>
      </div>
    </form>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
