<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <title>Maintenance Records</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css"
    />

   <style>
  body {
    background: linear-gradient(to bottom right, #1e2a38, #2d3e50);
    color: #ffffff;
    min-height: 100vh;
  }

  .container {
    background-color: #ffffff;
    color: #000000;
    padding: 40px;
    border-radius: 12px;
    margin-top: 50px;
    margin-bottom: 50px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.5);
    min-height: 80vh;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
  }

  h1 {
    color: #1b3c6b;
    font-weight: bold;
  }

  .table thead {
    background-color: #1b3c6b;
    color: white;
  }

  .table td,
  .table th {
    vertical-align: middle;
  }

  .btn-primary {
    background-color: #1b3c6b;
    border: none;
  }

  .btn-primary:hover {
    background-color: #324a74;
  }

  .back-home-btn {
    background: linear-gradient(to right, #1b3c6b, #2d3e50);
    color: #fff;
    border: none;
    padding: 10px 18px;
    border-radius: 8px;
    font-weight: 500;
    transition: background 0.3s ease;
    text-decoration: none;
  }

  .back-home-btn:hover {
    background: linear-gradient(to right, #324a74, #3a506b);
    color: #ffffff;
    text-decoration: none;
  }

  .bottom-buttons {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 10px;
    margin-top: 30px;
  }

  .alert {
    font-weight: bold;
  }

  .add-btn {
    padding-left: 24px;
    padding-right: 24px;
  }

  /* Action buttons styling */
  .table td .btn {
    margin: 2px;
    min-width: 70px;
  }

  .table td form {
    display: inline-block;
    margin: 0;
  }

  .table td .btn-warning {
    background-color: #ffc107;
    border-color: #ffc107;
  }

  .table td .btn-danger {
    background-color: #dc3545;
    border-color: #dc3545;
  }

  /* Responsive adjustments */
  @media (max-width: 768px) {
    .container {
      padding: 20px;
    }
    
    .table td .btn {
      padding: 0.25rem 0.5rem;
      font-size: 0.8rem;
      min-width: 60px;
    }
  }
</style>
  </head>
  <body>
    <%- include('partials/drawer') %>
    <div class="container">
      <div>
        <h1 class="mb-4">ðŸ›  Maintenance Records</h1>

        <% if (maintenanceRecords.length === 0) { %>
        <div class="alert alert-warning">No maintenance records found.</div>
        <% } else { %>
        <div class="table-responsive mb-4">
          <table class="table table-bordered table-hover">
            <thead class="table-light">
              <tr>
                <th>Machine</th>
                <th>Due Date</th>
                <th>Status</th>
                <th>Description</th>
                <th>Performed By</th>
                <th>Action</th>
              </tr>
            </thead>
            <tbody>
              <% maintenanceRecords.forEach(record => { %>
              <tr>
                <td><%= record.machine_name %></td>
                <td><%= record.due_date %></td>
                <td>
                  <% if (record.status.toLowerCase() === "pending") { %>
                  <span class="badge bg-warning text-dark px-3 py-2"
                    >Pending</span
                  >
                  <% } else if (record.status.toLowerCase() === "in progress") {
                  %>
                  <span class="badge bg-info text-dark px-3 py-2"
                    >In Progress</span
                  >
                  <% } else if (record.status.toLowerCase() === "done") { %>
                  <span class="badge bg-success px-3 py-2">Done</span>
                  <% } else { %>
                  <span class="badge bg-secondary px-3 py-2">Unknown</span>
                  <% } %>
                </td>
                <td><%= record.description %></td>
                <td><%= record.performed_by %></td>
                <td>
                  <% if (record.status.toLowerCase() !== "done") { %>
                  <a
                    class="btn btn-sm btn-warning me-2"
                    href="/maintenance/<%= record.id %>/edit"
                  >
                    Edit
                  </a>
                  <% } %>
                  <form
                    action="/maintenance/<%= record.id %>"
                    method="POST"
                    style="display: inline"
                  >
                    <button class="btn btn-sm btn-danger" type="submit">
                      Delete
                    </button>
                  </form>
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
        <% } %>
      </div>

      <!-- Buttons moved below -->
      <div class="bottom-buttons">
        <a href="/home" class="back-home-btn">
          <i class="fas fa-arrow-left"></i> Back to Dashboard
        </a>
        <a href="/maintenance/new" class="btn btn-primary add-btn">
          <i class="fas fa-plus"></i> Add Maintenance
        </a>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
